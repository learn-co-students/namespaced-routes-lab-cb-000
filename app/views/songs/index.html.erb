<% if Preference.exists?(:song_sort_order => "ASC") %>
  <%= @songs.order(:title) %>
<% elsif Preference.exists?(:song_sort_order => "DESC") %>
  <%= @songs.order(title: :desc) %>
<% end %>

<ul>
<% @songs.each do |song| %>
  <li><%= display_artist(song) %> - <%= link_to song.title, song_path(song) %></li>
<% end %>
</ul>
<br>
<%= link_to "Add New Song", new_song_path %>
